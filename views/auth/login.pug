extends ../layouts/common

block content
    .container
        h1 Login

        if errors
            each error in errors
                .alert.alert-danger=error

        form.row.g-2(action="/auth/login", method="POST")
            //- input(type="hidden", name="_csrf", value= csrfToken)
            .col-12
                label(for="email").form-label email
                input#email.form-control(name="email", type="text", value=values ? values.email : "")
            .col-12
                label(for="password").form-label Password
                input#password.form-control(name="password", type="password", value=values ? values.password : "")
            .col-12
                button.btn.btn-primary Login
